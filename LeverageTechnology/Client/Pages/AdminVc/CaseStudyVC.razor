@page "/CS"
@using LeverageTechnology.Client.Utility;
@using LeverageTechnology.Shared;
@using LeverageTechnology.Shared.Models.DTOs;

@inject ApiService ApiService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavManager

<MudGrid Class="pa-2" Style="object-fit: fill;">
    <MudItem Class="mt-1" xs="12" Style="height: fit-content;">
        <MudDataGrid Class="pt-3 pa-4" FixedHeader="true" T="CaseStudy" Items="@CaseStudies" EditMode="DataGridEditMode.Form"
                     Bordered="true" Dense="true" SelectedItemsChanged="@SelectedItemsChanged" MultiSelection="false">

            <ToolBarContent>
                <MudText Typo="Typo.h5" Color="Color.Primary">CaseStudies</MudText>
                <MudSpacer />
                <MudSpacer />
                <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" Size="Size.Small" OnClick="CreateNewCaseStudy" />
            </ToolBarContent>

            <Columns>
                <SelectColumn T="CaseStudy" />
                <PropertyColumn Property="x => CaseStudies.IndexOf(x)+1" Title="Nr" />
                <PropertyColumn Property="x => x.Page" Title="Page" />
                <PropertyColumn Property="x => x.Title" Title="Title" />
                <PropertyColumn Property="x => x.Video" Title="Video" />
                <PropertyColumn Property="x => x.Summary" Title="Summary" />
                <TemplateColumn CellClass="d-flex justify-end">
                    <CellTemplate>
                        <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Outlined.Info" OnClick="InfoItem" />
                        <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" OnClick="StartedEditingItem" />
                        <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Outlined.Delete" OnClick="DeleteItem" />
                    </CellTemplate>
                </TemplateColumn>
            </Columns>
            <PagerContent>
                <MudDataGridPager T="CaseStudy" RowsPerPageString="10" />
            </PagerContent>
        </MudDataGrid>
    </MudItem>
</MudGrid>

@code {
    private int rowIndex = 1;
    public List<CaseStudy> CaseStudies { get; set; }
    public List<ExpTable> ExpTables { get; set; }
    public List<Intro> Intros { get; set; }
    public CaseStudy SelectedCaseStudy { get; set; }
    public CaseStudy CaseStudy { get; set; }





    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState?.User;
        if (user?.Identity is not null && user.Identity.IsAuthenticated)
        {
            CaseStudies = await ApiService.GetCaseStudy();
        }
        else
        {
            NavManager.NavigateTo("/");
        }


    }


    #region Events

    void SelectedItemsChanged(HashSet<CaseStudy> items)
    {
        var selectedItem = items.FirstOrDefault();
        if (selectedItem != null)
        {
            SelectedCaseStudy = selectedItem;
        }
    }

    async void StartedEditingItem()
    {
        var parameters = new DialogParameters();
        parameters.Add("IsCaseStudy", true);
        parameters.Add("NewCaseStudy", SelectedCaseStudy);
        var dialog = await Dialog.ShowAsync<CaseStudySVC>("Edit CaseStudy", parameters, DialogSettings.DialogOptionsAddEditLead);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            // create request object
            var request = await ApiService.EditCaseStudy(SelectedCaseStudy);
            if (request)
            {
                CaseStudies = await ApiService.GetCaseStudy();
                ShowColorAlerts("CaseStudy Added", Severity.Success);
                StateHasChanged();
            }
            else
            {
                ShowColorAlerts("Fail To Add", Severity.Error);
            }
        }
        else
        {
            ShowColorAlerts("CaseStudy Not Added", Severity.Info);
        }
    }

    async void InfoItem()
    {
        var parameters = new DialogParameters();
        parameters.Add("IsCaseStudy", true);
        parameters.Add("NewCaseStudy", SelectedCaseStudy);
        parameters.Add("IsInfo", true);
        var dialog = await Dialog.ShowAsync<CaseStudySVC>("CaseStudy", parameters, DialogSettings.DialogOptionsAddEditLead);
        var result = await dialog.Result;
    }

    async void DeleteItem()
    {
        DataIdDTO dataIdDto = new DataIdDTO();
        dataIdDto.Id = SelectedCaseStudy.Id;

        // create request object
        var request = await ApiService.DeleteCaseStudy(dataIdDto);
        if (request)
        {
            CaseStudies = await ApiService.GetCaseStudy();
            ShowColorAlerts("CaseStudy Deleted", Severity.Success);
            StateHasChanged();
        }
        else
        {
            ShowColorAlerts("Fail To Delete", Severity.Error);
        }
    }

    async void CreateNewCaseStudy()
    {
        CaseStudy = new CaseStudy();
        CaseStudy.Page = "cad-automation";
        CaseStudy.Title = "2D Drawing Generation";
        CaseStudy.Summary = "Generate the 2D Drawing From 3D";
        CaseStudy.Video = "02568";
        CaseStudy.Keywords = "cad-automation";

        var parameters = new DialogParameters();
        parameters.Add("IsCaseStudy", true);
        parameters.Add("NewCaseStudy", CaseStudy);
        var dialog = await Dialog.ShowAsync<CaseStudySVC>("Add CaseStudy", parameters, DialogSettings.DialogOptionsAddEditLead);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            // create request object
            var request = await ApiService.AddCaseStudy(CaseStudy);
            if (request)
            {
                CaseStudies = await ApiService.GetCaseStudy();
                ShowColorAlerts("CaseStudy Added", Severity.Success);
                StateHasChanged();
            }
            else
            {
                ShowColorAlerts("Fail To Add", Severity.Error);
            }
        }
        else
        {
            ShowColorAlerts("CaseStudy Not Added", Severity.Info);
        }
    }

    /// <summary>
    ///
    /// </summary>
    /// <param name="TextToDisplay"></param>
    /// <param name="AlertSeverity"></param>
    private void ShowColorAlerts(string TextToDisplay, Severity AlertSeverity)
    {
        SnackbarService.Clear();
        SnackbarService.Configuration.PositionClass = Defaults.Classes.Position.BottomCenter;
        SnackbarService.Add(TextToDisplay, AlertSeverity);
    }

    #endregion Events

}
