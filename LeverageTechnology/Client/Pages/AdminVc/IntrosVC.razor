@page "/IN"

@using LeverageTechnology.Client.Utility;
@using LeverageTechnology.Shared;
@using LeverageTechnology.Shared.Models.DTOs;

@inject ApiService ApiService

<MudGrid Class="pa-2" Style="object-fit: fill;">
    <MudItem Class="mt-1" xs="12" Style="height: fit-content;">
        <MudDataGrid Class="pt-3 pa-4" FixedHeader="true" T="Intro" Items="@Intros" EditMode="DataGridEditMode.Form"
                     Bordered="true" Dense="true" SelectedItemsChanged="@SelectedItemsChanged">

            <ToolBarContent>
                <MudText Typo="Typo.h5" Color="Color.Primary">Intro</MudText>
                <MudSpacer />
                <MudSpacer />
                <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" Size="Size.Small" OnClick="CreateNewAppUser" />
            </ToolBarContent>

            <Columns>
                <SelectColumn T="Intro" />
                <PropertyColumn Property="x => x.Id" Title="Id" />
                <PropertyColumn Property="x => x.Page" Title="Page" />
                <PropertyColumn Property="x => x.Title" Title="Title" />
                <PropertyColumn Property="x => x.Introduction" Title="Introduction" />
                <PropertyColumn Property="x => x.Keywords" Title="Keywords" />
                <TemplateColumn CellClass="d-flex justify-end">
                    <CellTemplate>
                        <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Outlined.Info" OnClick="InfoItem" />
                        <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit"   OnClick="StartedEditingItem" />
                        <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Outlined.Delete" OnClick="DeleteItem" />
                    </CellTemplate>
                </TemplateColumn>
            </Columns>
            <PagerContent>
                <MudDataGridPager T="CaseStudy" RowsPerPageString="10" />
            </PagerContent>
        </MudDataGrid>
    </MudItem>
</MudGrid>

@code {

    public List<Intro> Intros { get; set; }
    public Intro SelectedIntro { get; set; }
    public Intro Intro { get; set; }


    protected override async Task OnInitializedAsync()
    {
        Intros = await ApiService.GetrIntro();

    }


    #region Events

    void SelectedItemsChanged(HashSet<Intro> items)
    {
        var selectedItem = items.FirstOrDefault();
        if (selectedItem != null)
        {
            SelectedIntro = selectedItem;
        }
    }

    async void StartedEditingItem()
    {
        var parameters = new DialogParameters();
        parameters.Add("IsIntro", true);
        parameters.Add("NewIntro", SelectedIntro);
        var dialog = await Dialog.ShowAsync<CaseStudySVC>("Edit Intro", parameters, DialogSettings.DialogOptionsAddEditLead);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            // create request object
            var request = await ApiService.EditIntro(SelectedIntro);
            if (request)
            {
                Intros = await ApiService.GetrIntro();
                ShowColorAlerts("Intro Added", Severity.Success);
                StateHasChanged();
            }
            else
            {
                ShowColorAlerts("Fail To Add", Severity.Error);
            }
        }
        else
        {
            ShowColorAlerts("Intro Not Added", Severity.Info);
        }
    }

    async void InfoItem()
    {
        var parameters = new DialogParameters();
        parameters.Add("IsIntro", true);
        parameters.Add("NewIntro", SelectedIntro);
        parameters.Add("IsInfo", true);
        var dialog = await Dialog.ShowAsync<CaseStudySVC>("Intro", parameters, DialogSettings.DialogOptionsAddEditLead);
        var result = await dialog.Result;
    }

    async void DeleteItem()
    {
         DataIdDTO dataIdDto = new DataIdDTO();
        dataIdDto.Id = SelectedIntro.Id;

        // create request object
        var request = await ApiService.DeleteIntro(dataIdDto);
        if (request)
        {
            Intros = await ApiService.GetrIntro();
            ShowColorAlerts("CaseStudy Deleted", Severity.Success);
            StateHasChanged();
        }
        else
        {
            ShowColorAlerts("Fail To Delete", Severity.Error);
        }        
    }

    async void CreateNewAppUser()
    {
        Intro = new Intro();
        Intro.Page = "digital-twin";
        Intro.Title = "Digital Twin";
        Intro.Introduction = "Digital Twin Inrtoduction";
        Intro.Keywords = "Digital Twin";

        var parameters = new DialogParameters();
        parameters.Add("IsIntro", true);
        parameters.Add("NewIntro", Intro);
        var dialog = await Dialog.ShowAsync<CaseStudySVC>("Add Intro", parameters, DialogSettings.DialogOptionsAddEditLead);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            // create request object
            var request = await ApiService.AddIntro(Intro);
            if (request)
            {
                Intros = await ApiService.GetrIntro();
                _ = await ApiService.GetCaseStudy();
                _ = await ApiService.GetExpTables();
                _ = await ApiService.GetrIntro();
                ShowColorAlerts("Intro Added", Severity.Success);
                StateHasChanged();
            }
            else
            {
                ShowColorAlerts("Fail To Add", Severity.Error);
            }
        }
        else
        {
            ShowColorAlerts("Intro Not Added", Severity.Info);
        }
    }

    /// <summary>
    ///
    /// </summary>
    /// <param name="TextToDisplay"></param>
    /// <param name="AlertSeverity"></param>
    private void ShowColorAlerts(string TextToDisplay, Severity AlertSeverity)
    {
        SnackbarService.Clear();
        SnackbarService.Configuration.PositionClass = Defaults.Classes.Position.BottomCenter;
        SnackbarService.Add(TextToDisplay, AlertSeverity);
    }



    #endregion Events

}
